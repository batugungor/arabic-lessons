{% extends 'base.html.twig' %}

{% block title %}Hello LessonController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for lesson in lessons %}
                <div class="col-4">
                    <a href="{{ path('app_single_lesson', {'lesson_slug': lesson.slug}) }}" class="text-decoration-none link-dark">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title mb-4 fw-bold">
                                    {{ lesson.title }}
                                </h5>
                                <p class="card-text">
                                    {{ lesson.description }}
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
