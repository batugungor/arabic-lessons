{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 mt-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title" dir="rtl">
                                {{ chapter.chapter.name_arabic }}
                            </h5>
                            <h6 class="mb-2 text-muted">
                                ({{ chapter.chapter.verses_count }})
                            </h6>
                        </div>
                        <h6 class="card-subtitle mb-2 text-muted">
                            {{ chapter.chapter.name_simple }}
                        </h6>
                        <div class="mt-3">
                            <a href="javascript:void(0)" id="start-button" class="card-link">Start</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 mt-3">
                <div class="card w-100">
                    <div class="card-body">
                        <h5 id="quranic-arabic" style="font-size: 90px;" class="text-center mb-3"></h5>
                        <p id="quranic-transliteration" class="card-text text-center"></p>
                        <div id="quranic-questions" class="mt-4 mb-2 d-none" >
                            <div class="form-check mb-2 py-3 --large-radio-button">
                                <input class="form-check-input quranic-questions" type="radio" name="quranic-question" id="quranic-question-1" value="">
                                <label class="form-check-label w-100" for="quranic-question-1">
                                    Default radio
                                </label>
                            </div>
                            <div class="form-check mb-2 py-3 --large-radio-button">
                                <input class="form-check-input quranic-questions" type="radio" name="quranic-question" id="quranic-question-2" value="">
                                <label class="form-check-label w-100" for="quranic-question-2">
                                    Default radio
                                </label>
                            </div>
                            <div class="form-check mb-2 py-3 --large-radio-button">
                                <input class="form-check-input quranic-questions" type="radio" name="quranic-question" id="quranic-question-3" value="">
                                <label class="form-check-label w-100" for="quranic-question-3">
                                    Default radio
                                </label>
                            </div>
                            <div class="form-check mb-2 py-3 --large-radio-button">
                                <input class="form-check-input quranic-questions" type="radio" name="quranic-question" id="quranic-question-4" value="">
                                <label class="form-check-label w-100" for="quranic-question-4">
                                    Default radio
                                </label>
                            </div>
                            <div class="d-flex align-items-center justify-content-center">
                                <a href="javascript:void(0)" id="continue-button" class="card-link">Continue</a>
                            </div>
                        </div>
                        <div id="last-verse-warning" class="d-flex align-items-center justify-content-center d-none">
                            <h6 class="card-title">That was the last verse</h6>
                        </div>
                    </div>
                </div>
                <div>
                    {% for verse in verses["verses"] %}
                        {% include 'blocks/verse.html.twig' with { verse : verse } %}
                    {% endfor %}
                </div>
            </div>

        </div>
    </div>
{% endblock %}
